<UserControl x:Class="gbchef.Controls.FilterListBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gbchef.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" 
             Orientation="Horizontal"
             VerticalAlignment="Center">

            <Label Content="{Binding Name, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}" 
                Margin="5" 
                Width="Auto"
                MinWidth="80"
                HorizontalAlignment="Left"
                FontWeight="Bold"/>

            <Button Content="Select All" 
                    Margin="0,0,3,0"
                    Name="SelectAllButton"
                    FontSize="10" Padding="3,1,3,1" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="#FF505050" Click="SelectAllButton_Click" />
            <Button Content="Clear"
                    Name="ClearButton"
                    FontSize="10" Padding="3,1,3,1" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="#FF505050" Click="ClearButton_Click" />
        </StackPanel>

        <ListBox Grid.Row="1"
                 x:Name="InnerListBox"
                 SelectionMode="Multiple"
                 PreviewMouseLeftButtonDown="InnerListBox_PreviewMouseLeftButtonDown" 
                 PreviewMouseMove="InnerListBox_PreviewMouseMove" 
                 PreviewMouseLeftButtonUp="InnerListBox_PreviewMouseLeftButtonUp"
                 ItemsSource="{Binding Items, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}">
            <!-- Remove default highlighting -->
            <ListBox.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="Transparent"/>
            </ListBox.Resources>

            <!-- Style for ListBox items -->
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border Name="Border" Background="Transparent">
                                    <ContentPresenter />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="Green"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</UserControl>
